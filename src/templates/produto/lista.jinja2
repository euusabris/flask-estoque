{%  extends '_layout.jinja2' %}
{% from 'bootstrap5/utils.html' import render_icon %}

{% block content %}
    <table class="table table-striped table-hover">
    <thead><tr>
            <th scope="col">Nome do Produto</th>
            <th scope="col" class="text-end">Preço</th>
            <th scope="col">Categoria</th>
            <th scope="col">Estoque</th>
            <th scope="col ">Ativo</th>
            <th scope="col" class="text-center">Operações</th>
    </tr></thead>
    <tboody>
    {% for produto in rset %}
       <tr><td>{{ produto.nome }}</td>
            <td class="text-end">{{ produto.preco }}</td>
            <td>{{ produto.categoria.nome }}</td>
            <td> {{ produto.estoque }}</td>
            <td>{% if produto.ativo %}{{ render_icon('check', color='success') }}{% else %}{{ render_icon('x', color='danger') }}{% endif %}</td>
            <td class="text-center"><a href="{{url_for('produto.edit', produto_id = produto.id)}}">
                {{ render_icon('pencil-square', color='primary', size='1.25em') }}</a></td>
           <td></td></tr>
    {% endfor %}
    </tboody>
    </table>
{% endblock %}